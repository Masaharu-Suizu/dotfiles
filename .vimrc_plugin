call plug#begin('~masaharu/.vim/plugged')

if has('nvim')
  Plug 'Shougo/deoplete.nvim', { 'do': ':UpdateRemotePlugins' }
else
  Plug 'Shougo/deoplete.nvim'
  Plug 'roxma/nvim-yarp'
  Plug 'roxma/vim-hug-neovim-rpc'
endif
let g:deoplete#enable_at_startup = 1

Plug 'w0rp/ale'

let g:ale_linters = {
    \'php': ['php', 'phpstan', 'phpcs', 'langserver']
\}
let g:ale_fixers = {
    \'php': [
        \'remove_trailing_lines',
        \'trim_whitespace',
        \'phpcbf']
\}
let g:ale_php_langserver_executable = expand('~/.config/composer/vendor/bin/php-language-server.php')
let g:ale_fix_on_save = 1
let g:ale_php_phpcs_standard = 'PSR1,PSR12'

call plug#end()

